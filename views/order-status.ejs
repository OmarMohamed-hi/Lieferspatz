<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lieferpatz</title>
    <link rel="stylesheet" href="styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body class="order-status-page-container">
    <%- include("partials/header.ejs") %>

    <div class="order-status-page mb-4">
      <!-- Header Section -->
      <div class="order-header text-center p-4">
        <div class="icon-circle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="100"
            height="100"
            fill="currentColor"
            class="bi bi-check-circle-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"
            />
          </svg>
        </div>
        <h2>Order 1234</h2>
        <h3>Thank you, Ahmed!</h3>
        <p class="confirmation-text">Your order is confirmed successfully!</p>
      </div>

      <!-- Main Content -->
      <div class="main-content container mt-4">
        <div class="row">
          <!-- Left Section (Order Details) -->
          <div class="col-lg-4 order-details p-3">
            <div class="restaurant-name">
              <span class="circle">Pizza di Milano</span>
            </div>
            <div class="order-summary">
              <h4>My order</h4>
              <p class="delivery-address">
                Delivery to Ahmed - <br />
                Duisburger str. 16 45462 Duisburg
              </p>
              <hr />
              <div class="order-item d-flex justify-content-between">
                <span>Pizza Funghi</span>
                <span>6.50€</span>
              </div>
              <hr />
              <div class="order-item d-flex justify-content-between">
                <span>Sub Total</span>
                <span>13.00€</span>
              </div>
              <div class="order-item d-flex justify-content-between">
                <span>Delivery Fees</span>
                <span>0.00€</span>
              </div>
              <hr />
              <div class="order-total d-flex justify-content-between fw-bold">
                <span>Total</span>
                <span>13.00€</span>
              </div>
              <p class="tax-notice">Taxes and shipping included.</p>
            </div>
          </div>

          <!-- Right Section (Map and Timer) -->
          <div class="col-lg-8">
            <div class="map-container mt-2">
              <img src="./AFO/maps.png" alt="Map" class="img-fluid rounded" />
              <div class="delivery-timer">
                <span>12 Min</span>
              </div>
            </div>
            <div class="image-container mt-2">
              <img
                src="./AFO/hungry.gif"
                alt="Cartoon Image"
                class="img-fluid"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("partials/footer.ejs") %>

    <script src="script.js"></script>
  </body>
</html>
