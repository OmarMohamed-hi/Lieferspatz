  <body>
    <%- include("partials/header.ejs") %>

<main>
      
    <form action="/saveRestaurant" method="POST" class="mainn g-3 vertical-stack d-flex flex-column">
        <h1>Restaurant Details</h1>
        <div class="firstn mb-3 ">
          <label for="inputResname" class="form-label">Restaurant Name </label>
          <input type="Name" class="form-control" id="inputresname" name="restaurantName" required>
        </div>
        <div class="phoneno mb-3">
          <label for="inputPhoneno" class="form-label">Phone Number</label>
          <input type="number" class="form-control" id="inputlastn4" placeholder="+49123456789" name="phoneNumber">
        </div>
        <div class="emaill mb-3 ">
          <label for="inputEmail4" class="form-label">Email</label>
          <input type="email" class="form-control" id="inputEmail4" name="email" required>
        </div>
        <div class="passw mb-3">
          <label for="inputLast4" class="form-label">Password</label>
          <input type="password" class="form-control" id="inputPassword4" name="password" required>
        </div>
        <div class="addr mb-3">
          <label for="inputAddress" class="form-label">Address</label>
          <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="address" required>
        </div>
        <div class="zipcode mb-3">
          <label for="inputZip" class="form-label">PLZ</label>
          <input type="text" class="form-control" id="inputZip" name="plz"  min="0" minlength="5" maxlength="5" required>
        </div>
        <div class="row mb-3">
          <div class="col">
            <label for="inputOpeningHour" class="form-label">Opening Hour</label>
            <input type="time" class="form-control" id="inputOpeningHour" name="openingHours" required>
          </div>
          <div class="col">
            <label for="inputClosingHour" class="form-label">Closing Hour</label>
            <input type="time" class="form-control" id="inputClosingHour" name="closingHours" required>
          </div>
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-success">Save & Continue</button>
        </div>
        
      </form> 
    
</main>

